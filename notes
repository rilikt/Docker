NOTES and COMMANDS:
- docker ps
  - list running docker containers
- docker exec -it <container_id> bash
  - opens the container in interactive mode with bash

MYSQL:
- mysql -u root -p
  - login as root into the database
- SHOW DATABASES;
  - list databases
- USE <name_of_database>;
  - select a database to work with
- SHOW TABLES;
  - view contents of the database;
- SHOW COLUMN from <table_name>;
- SHOW INDEX from <table_name>;

VOLUMES:
- docker volume ls
- docker volume inspect <volume_name>

